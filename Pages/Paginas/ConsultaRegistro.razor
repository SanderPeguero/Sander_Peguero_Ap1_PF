@page "/ConsultaRecepcion"

@inject IToastService toast

<EditForm Model="recepciones">
    <DataAnnotationsValidator/>

    <div class="card align-items-inherit bg-dark mb-5" style="width: 40rem;">

        <div class="card mb-3 bg-secondary">

            <div class="card-header bg-dark">
                <h3 class="text-white">Consulta de Recepciones</h3>
            </div>

            <div class="card-body">
            
                <form>

                    @* @if(cliente.ClienteId > 0){ *@

                        <div class="input-group d-flex align-items-end">

                            <select class="form-select" aria-label="Default select example" @bind="Filtro">
                                <option selected disabled value="">Selecciona...</option>
                                <option value="1">Id</option>
                                <option value="2">Marca</option>
                                <option value="3">Modelo</option>
                                <option value="4">Teclado</option>
                            </select>
                            
                            <div class = "flex-fill mx-2">
                                
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-dark input-group-text" @onclick=Buscar> 
                                        <span class="oi oi-magnifying-glass" title="magnifying-glass" aria-hidden="true"></span>
                                    </button>
                                </div>

                            </div>
                            
                        </div>

                    @* } *@

                </form>

            </div>

            <table class="table table-light">
                <thead class="thead">
                    <tr class="table m-3">
                        <th>Id</th>
                        <th>Tecnico</th>
                        <th>Modelo</th>
                        <th>IMEI</th>
                        <th>Color</th>
                        <th>Teclado Físico</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recepcion in recepciones)
                    {
                        <tr>
                            <td>@recepcion.RecepcionId</td>
                            <td>@recepcion.Tecnico</td>
                            @* <td>@recepcion.Modelo</td>
                            <td>@recepcion.IMEI</td>
                            <td>@recepcion.Color</td>
                            <td>@dispositivo.Teclado</td> *@

                        </tr>
                    }
                </tbody>
            </table>
            
        </div>

    </div> 
    
</EditForm>

@code {

    private List<Recepcion> recepciones = new List<Recepcion>();

    private Cliente cliente = new Cliente();

    private string Filtro;

    void Nuevo(){

        cliente = new Cliente();
        recepciones = new List<Recepcion>();

    }
    void Buscar(){
    
        recepciones = RecepcionesBLL.GetList();

    }


    
}
